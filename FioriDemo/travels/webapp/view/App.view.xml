<mvc:View
    controllerName="ns.travels.controller.App"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Shell id="shell-1">
        <App
            id="app"
            class="myAppDemoWT"
        >
            <pages>
                <Page
                    id="page-2"
                    title="{i18n>homePageTitle}"
                >
                    <content>
                        <mvc:XMLView
                            id="hello-view"
                            viewName="ns.travels.view.HelloPanel"
                        />
                        <mvc:XMLView
                            id="invoice-list-view"
                            viewName="ns.travels.view.InvoiceList"
                        />
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
