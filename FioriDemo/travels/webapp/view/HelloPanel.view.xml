<mvc:View
    controllerName="ns.travels.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Panel
        id="panel-2"
        headerText="{i18n>subpageHeader}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <Button
                id="button-redirect"
                text="{i18n>redirectButtonText}"
                press=".onRedirect"
                type="Neutral"
                class="sapUiSmallMarginEnd"
            />
            <Button
                id="helloDialogButton"
                text="{i18n>openDialogButtonText}"
                press=".onOpenDialog"
                class="sapUiSmallMarginEnd"
                icon="sap-icon://world"
            />
            <Button
                id="button-hello"
                text="{i18n>showHelloButtonText}"
                press=".onShowHello"
                class="myCustomButton"
                type="Emphasized"
            />
            <Input
                id="input-2"
                value="{/recipient/name}"
                valueLiveUpdate="true"
                width="30%"
            />
            <FormattedText
                id="text-2"
                htmlText="Hello {/recipient/name}"
                class="sapUiTinyMargin sapThemeHighlight-asColor myCustomText"
            />
        </content>
    </Panel>
</mvc:View>
