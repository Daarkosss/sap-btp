<mvc:View
    controllerName="ns.travels.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Panel
        id="panel-2"
        headerText="{i18n>helloPanelTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <Button
                id="button-hello"
                text="{i18n>showHelloButtonText}"
                press=".onShowHello"
                class="myCustomButton"
            />
            <Button
                id="button-redirect"
                text="{i18n>redirectButtonText}"
                press=".onRedirect"
                class="myCustomButton"
            />
            <Input
                id="input-2"
                value="{/recipient/name}"
                valueLiveUpdate="true"
                width="60%"
            />
            <FormattedText
                id="text-2"
                htmlText="Hello {/recipient/name}"
                class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"
            />
        </content>
    </Panel>
</mvc:View>
