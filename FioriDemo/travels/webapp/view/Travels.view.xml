<mvc:View
    controllerName="ns.travels.controller.Travels"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>homePageTitle}"
    >
        <content>
            <Panel
                id="panel-1"
                headerText="{i18n>helloPanelTitle}"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <content>
                    <Button
                        id="button-go-back"
                        text="{i18n>goBackButtonText}"
                        press=".onGoBack"
                        type="Back"
                        class="sapUiSmallMarginEnd"
                    />
                    <Button
                        type="Accept"
                        id="button-1"
                        press=".onButtonPress"
                        text="{i18n>showHelloButtonText}"
                        class="myCustomButton"
                    />
                    <Input
                        id="input-recipient-name"
                        value="{/recipient/name}"
                        description="Hello {/recipient/name}"
                        valueLiveUpdate="true"
                        width="60%"
                    />
                    <FormattedText
                        id="text-1"
                        htmlText="Hello {/recipient/name}"
                        class="sapUiTinyMargin sapThemeHighlight-asColor myCustomText"
                    />
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>
